{
  "name": "mdcat-past-paper-generator",
  "version": "3.0.0",
  "description": "Advanced MDCAT Past Paper Generator with AI-powered question generation using Gemini 2.5-flash",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prestart": "node -e \"console.log('üöÄ Starting MDCAT Generator Server...')\"",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "lint": "eslint server.js --fix",
    "format": "prettier --write *.js *.json",
    "health-check": "curl -s http://localhost:3000/health | jq",
    "validate-env": "node -e \"require('dotenv').config(); console.log('API Key:', process.env.GEMINI_API_KEY ? '‚úÖ Configured' : '‚ùå Missing');\""
  },
  "keywords": [
    "mdcat",
    "exam",
    "generator",
    "ai",
    "gemini",
    "medical",
    "pakistan",
    "past-papers",
    "questions",
    "multiple-choice"
  ],
  "author": "MDCAT Generator Team",
  "license": "MIT",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mdcat-generator.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mdcat-generator/issues"
  },
  "homepage": "https://github.com/your-org/mdcat-generator#readme",
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false,
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "package.json",
      ".env"
    ],
    "ext": "js,json,html",
    "ignore": [
      "node_modules/",
      "tests/",
      "*.test.js"
    ],
    "exec": "node server.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "script"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
